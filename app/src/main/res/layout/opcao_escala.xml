<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="45dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/iv_mark_opcoes_escala"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:src="@drawable/selecao_opcao_escala"
        android:foregroundGravity="right"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="2dp"
        android:visibility="invisible"/>



    <TextView
        android:id="@+id/tv_selecao_escala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/iv_mark_opcoes_escala"
        android:textColor="@color/colorTextOpcoesEscala"/>


</RelativeLayout>