<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.dev42.tutti.fragments.TelaEscalasFragment">

    <ImageView
        android:id="@+id/iv_tela_i1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:src="@drawable/opcao4intervalo1atela1">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/colorAzulClaro">

        <Button
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:text="1"
            android:textSize="10sp"
            android:layout_marginLeft="93dp"
            android:background="@drawable/btn_intervalos"
            android:textColor="@color/colorPreto"
            android:layout_marginRight="19dp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:text="2"
            android:textSize="10sp"
            android:background="@drawable/btn_intervalos"
            android:textColor="@color/colorPreto"
            android:layout_marginRight="19dp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:text="3"
            android:textSize="10sp"
            android:background="@drawable/btn_intervalos"
            android:textColor="@color/colorPreto"
            android:layout_marginRight="19dp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:text="4"
            android:textSize="10sp"
            android:textColor="@color/colorPreto"
            android:background="@drawable/btn_intervalos"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_tela_i2"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:src="@drawable/opcao4intervalo1btela1">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/colorAzulClaro">

        <Button
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:text="1"
            android:textSize="10sp"
            android:layout_marginLeft="93dp"
            android:background="@drawable/btn_intervalos"
            android:textColor="@color/colorPreto"
            android:layout_marginRight="19dp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:text="2"
            android:textSize="10sp"
            android:background="@drawable/btn_intervalos"
            android:textColor="@color/colorPreto"
            android:layout_marginRight="19dp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:text="3"
            android:textSize="10sp"
            android:background="@drawable/btn_intervalos"
            android:textColor="@color/colorPreto"
            android:layout_marginRight="19dp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:text="4"
            android:textSize="10sp"
            android:textColor="@color/colorPreto"
            android:background="@drawable/btn_intervalos"/>
    </LinearLayout>
</LinearLayout>
